import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;

import java.util.List;
import java.util.Map;
import java.util.concurrent.Executor;

import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.*;

class CombineConfirmCorrespondenceServiceTest {

    @Mock
    private ArchiveDocsRestService archiveDocsRestService;

    @Mock
    private MailItPreferenceService mailItPreferenceService;

    @Mock
    private SetItPullClientCache setItPullClientCache;

    @Mock
    private RequestService requestService;

    @Mock
    private ClientParticipantInfoCache clientParticipantInfoCache;

    @Mock
    private Executor correspondenceExecutor;

    @InjectMocks
    private CombineConfirmCorrespondenceService combineConfirmCorrespondenceService;

    @BeforeEach
    void setUp() {
        MockitoAnnotations.openMocks(this);
    }

    @Test
    void testGetCorrespondenceDocs_withValidInputs_shouldReturnResponse() {
        // Arrange
        Map<String, String> headers = Map.of("Authorization", "Bearer test-token");
        PartyInfo partyInfo = new PartyInfo("123", "456", "test-ssn");
        when(requestService.getPreAuthHeadersMap(headers)).thenReturn(Map.of("key", "value"));
        when(requestService.getAccountsList(any(), any())).thenReturn(List.of(
            new Account("123", "Savings", true, "Plan1")
        ));
        when(setItPullClientCache.getClient(any())).thenReturn(new Client("123", "CEDARARCHIVEECOR"));

        // Act
        CorrespondenceResponse response = combineConfirmCorrespondenceService.getCorrespondenceDocs(headers, partyInfo);

        // Assert
        assertNotNull(response);
        verify(requestService, times(1)).getPreAuthHeadersMap(headers);
        verify(requestService, times(1)).getAccountsList(any(), any());
    }

    @Test
    void testGetCorrespondenceDocs_withEmptyPlans_shouldReturnEmptyComboCorresInfos() {
        // Arrange
        Map<String, String> headers = Map.of("Authorization", "Bearer test-token");
        PartyInfo partyInfo = new PartyInfo("123", "456", "test-ssn");
        when(requestService.getPreAuthHeadersMap(headers)).thenReturn(Map.of("key", "value"));
        when(requestService.getAccountsList(any(), any())).thenReturn(List.of());

        // Act
        CorrespondenceResponse response = combineConfirmCorrespondenceService.getCorrespondenceDocs(headers, partyInfo);

        // Assert
        assertNotNull(response);
        assertTrue(response.getComboCorresInfos().isEmpty());
    }

    @Test
    void testSetPlanLvlBrandFlg_withValidData_shouldReturnTrue() {
        // Arrange
        PartyInfo partyInfo = new PartyInfo("123", "test-ssn", null);
        when(clientParticipantInfoCache.getAllPlansByClientParticipantControlType(any(), any(), any()))
            .thenReturn(List.of("Plan1"));
        when(setItPullClientCache.getSetItPlanGeneralInfo(any()))
            .thenReturn(new PlanGeneralInfo("Y"));

        // Act
        boolean result = combineConfirmCorrespondenceService.setPlanLvlBrandFlg(partyInfo);

        // Assert
        assertTrue(result);
        verify(clientParticipantInfoCache, times(1)).getAllPlansByClientParticipantControlType(any(), any(), any());
    }

    @Test
    void testSetPlanLvlBrandFlg_withNoPlans_shouldReturnFalse() {
        // Arrange
        PartyInfo partyInfo = new PartyInfo("123", "test-ssn", null);
        when(clientParticipantInfoCache.getAllPlansByClientParticipantControlType(any(), any(), any()))
            .thenReturn(List.of());

        // Act
        boolean result = combineConfirmCorrespondenceService.setPlanLvlBrandFlg(partyInfo);

        // Assert
        assertFalse(result);
    }
}
